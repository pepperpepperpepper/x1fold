[Unit]
# Source: x1fold/systemd/x1fold-halfblankd.service
Description=Lenovo X1 Fold halfblank policy daemon (dock-triggered)
After=multi-user.target
Wants=multi-user.target

[Service]
Type=simple
Environment=PYTHONDONTWRITEBYTECODE=1
ExecStart=/usr/local/bin/x1fold_halfblankd.py --require-x1fold --apply-initial --display none --digitizer auto --enforce-every-s 0 --state-file /run/x1fold-halfblank/state.json
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target
