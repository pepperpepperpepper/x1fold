[Unit]
# Source: x1fold/systemd/user/x1fold-halfblank-ui.service
Description=Lenovo X1 Fold halfblank UI helper (apply display geometry)
After=graphical-session.target
Wants=graphical-session.target

[Service]
Type=simple
ExecStart=/usr/local/bin/x1fold_halfblank_ui.py --state-file /run/x1fold-halfblank/state.json --x11-auto-rotate --x11-force-normal-when-half
Restart=on-failure
RestartSec=1

[Install]
WantedBy=default.target
