@@ -0,0 +1,60 @@
+#include <stdbool.h>
+#include <stdint.h>
+#include <stdlib.h>
+#include <strings.h>
+#include <string.h>
+#include "sway/commands.h"
+#include "sway/config.h"
+#include "sway/output.h"
+
+static bool is_internal_panel(const char *name) {
+	return name && strncmp(name, "eDP", 3) == 0;
+}
+
+struct cmd_results *output_cmd_x1fold_halfblank(int argc, char **argv) {
+	if (!config->handler_context.output_config) {
+		return cmd_results_new(CMD_FAILURE, "Missing output config");
+	}
+	if (!argc) {
+		return cmd_results_new(CMD_INVALID, "Missing x1fold_halfblank argument.");
+	}
+
+	struct output_config *oc = config->handler_context.output_config;
+	if (strcmp(oc->name, "*") == 0) {
+		return cmd_results_new(CMD_INVALID,
+			"x1fold_halfblank cannot be applied to all outputs");
+	}
+
+	// Battery-first safety: only allow on the internal panel.
+	if (!config->reading) {
+		struct sway_output *output = output_by_name_or_id(oc->name);
+		if (output && !is_internal_panel(output->wlr_output->name)) {
+			return cmd_results_new(CMD_INVALID,
+				"x1fold_halfblank is only supported for the internal panel");
+		}
+	}
+
+	int consumed = 0;
+	if (strcasecmp(argv[0], "disable") == 0 || strcasecmp(argv[0], "off") == 0) {
+		oc->x1fold_active_height = 0;
+		consumed = 1;
+	} else if (strcasecmp(argv[0], "enable") == 0 || strcasecmp(argv[0], "on") == 0) {
+		if (argc < 2) {
+			return cmd_results_new(CMD_INVALID, "Missing active height argument.");
+		}
+		char *end = NULL;
+		long h = strtol(argv[1], &end, 10);
+		if (end == argv[1] || (end && *end) || h <= 0 || h > INT32_MAX) {
+			return cmd_results_new(CMD_INVALID, "Invalid active height.");
+		}
+		oc->x1fold_active_height = (int)h;
+		consumed = 2;
+	} else {
+		return cmd_results_new(CMD_INVALID,
+			"Invalid x1fold_halfblank argument (expected enable <px> or disable).");
+	}
+
+	config->handler_context.leftovers.argc = argc - consumed;
+	config->handler_context.leftovers.argv = argv + consumed;
+	return NULL;
+}
